/** 10x10SquareGridLayout – UI-only 10×10 rozložení square ButtonCell pro iSenses hry */

import React from "react";
import ButtonCell from "../ui/ButtonCell"; // naše standardní SQUARE buňka 166×166 px

const ROWS = 10;
const COLS = 10;
const CELL_SIZE = 166;

function TenByTenSquareGridLayout({
  cells = [],          // volitelné: pole s konfigurací buněk [ { color, uiState, showSuccess }, ... ]
  onCellClick,         // (idx, event) => void – předá kliknutí hře
  disabled = false,
}) {
  const totalCells = ROWS * COLS;

  return (
    <div
      style={{
        width: "100%",
        height: "100%",
        display: "grid",
        gridTemplateColumns: `repeat(${COLS}, ${CELL_SIZE}px)`,
        gridAutoRows: `${CELL_SIZE}px`,
        justifyContent: "center",
        alignContent: "center",
        columnGap: 12,
        rowGap: 12,
        boxSizing: "border-box",
      }}
    >
      {Array.from({ length: totalCells }, (_, i) => {
        const idx = i + 1; // 1–100
        const cellCfg = cells[i] || {};
        return (
          <ButtonCell
            key={idx}
            idx={idx}
            size={CELL_SIZE}
            color={cellCfg.color ?? null}
            uiState={cellCfg.uiState ?? "none"}
            showSuccess={cellCfg.showSuccess ?? false}
            disabled={disabled || cellCfg.disabled}
            onClick={onCellClick}
          />
        );
      })}
    </div>
  );
}

export default TenByTenSquareGridLayout;
